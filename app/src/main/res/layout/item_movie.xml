<?xml version="1.0" encoding="utf-8"?>
<carbon.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="20dp"
    android:background="#3A0202"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    >

    <carbon.widget.RelativeLayout
        android:id="@+id/rvControl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:alpha="0.6"
        android:paddingTop="20dp"
        android:paddingBottom="10dp"
        app:carbon_cornerRadius="0dp"
        app:carbon_elevation="8dp"
        app:carbon_elevationShadowColor="@color/carbon_white_10">


        <carbon.widget.TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="1dp"
            android:layout_toEndOf="@+id/ivContainer"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            tools:text="Fast Furious Presents: Hobbs Shaw" />

        <TextView
            android:id="@+id/tvOverview"
            android:layout_width="204dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvTitle"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="0dp"
            android:layout_toEndOf="@+id/ivContainer"
            android:textColor="#FFFFFF"
            tools:text="In a suburban fantasy world, two teenage elf brothers embark on an extraordinary quest to discover if there is still a little magic left out there" />

        <RelativeLayout
            android:id="@+id/ivContainer"
            android:layout_width="wrap_content"
            android:layout_height="190dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp">

            <ImageView
                android:id="@+id/ivPoster"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:alpha="0.7"
                tools:srcCompat="@tools:sample/avatars" />

        </RelativeLayout>


    </carbon.widget.RelativeLayout>

</carbon.widget.RelativeLayout>